<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A49EF"
    android:backgroundTint="#2B3B91">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="169dp"
        android:layout_height="284dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pimm" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="279dp"
        android:layout_height="37dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="368dp"
        android:gravity="center_horizontal"
        android:text="Netchanok Muaengkhot"
        android:textColor="#F1D06E"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="130dp"
        android:layout_height="33dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="4dp"
        android:text="633020379-6"
        android:textColor="#F1D06E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="275dp"
        android:layout_height="35dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="4dp"
        android:text="College of Computing Khon Kaen University"
        android:textColor="#F1D06E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>